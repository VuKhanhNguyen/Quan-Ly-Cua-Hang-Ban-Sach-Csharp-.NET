
@{
    ViewBag.Title = "CuaHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<QuanLyCuaHangBanSach.Models.THELOAI>

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cửa hàng</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/Home/Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Trang</a></li>
        <li class="breadcrumb-item active text-white">Cửa hàng</li>
    </ol>
</div>
<!-- Single Page Header End -->


<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">Cửa hàng sách</h1>
        <div class="row g-4">
            <div class="col-xl-3">
                <div class="input-group w-100 mx-auto d-flex">
                    <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                    <span for="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>


            <div class="col-6"></div>
            <div class="col-xl-3">
                <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                    <label for="fruits">Phân loại mặc định:</label>
                    <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" for="fruitform">
                        <option value="volvo">Không</option>
                        <option value="saab">Phổ biển</option>
                        <option value="opel">Ưu đãi</option>
                        <option value="audi">Loại</option>
                    </select>
                </div>
            </div>

        </div>
        <div class="tab-class text-center">
            <div class="row g-4">
                @*<div class="col-lg-4 text-start">
                        <h1>Sản phẩm </h1>
                    </div>*@
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-flex text-center mb-8 flex-nowrap">
                        @foreach (var item in Model)
                        {
                            <li class="nav-item">
                                <a class="d-flex py-2 m-2 bg-light rounded-pill @(Model.First() == item ? "active" : "")"
                                   data-bs-toggle="pill" href="#tab-@item.IDTheLoai">
                                    <span class="text-dark" style="width: 150px;">@item.TenTheLoai</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="tab-content">
                @foreach (var theLoai in Model)
                {
                    <div id="tab-@theLoai.IDTheLoai" class="tab-pane fade @(Model.First() == theLoai ? "show active" : "") p-0">
                        <div class="row g-4">
                            @if (theLoai.SACHes.Any())
                            {
                                foreach (var sach in theLoai.SACHes)
                                {
                                    <div class="col-md-6 col-lg-4 col-xl-3">
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                                <img src="@sach.AnhSach" class="img-fluid w-100 rounded-top" alt="@sach.TenSach">
                                            </div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                @*<h4><a href="~/Views/ChiTietSach/ChiTietSach.cshtml" target="_blank">@sach.TenSach</a></h4>*@
                                                <h4>
                                                    <a href="@Url.Action("ChiTietSach", "ChiTietSach", new { id = sach.IDSach })" target="_blank">
                                                        @sach.TenSach
                                                    </a>
                                                </h4>
                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="text-dark fs-5 fw-bold mb-0">@String.Format("{0:0,0} đồng", @sach.GiaBan)</p>
                                                    <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                        <i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ hàng
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-center">Chưa có sách trong thể loại này.</p>
                            }
                        </div>
                    </div>
                }


                <div class="col-12">
                    <div class="pagination d-flex justify-content-center mt-5">
                        <a href="#" class="rounded">&laquo;</a>
                        <a href="#" class="active rounded">1</a>
                        <a href="#" class="rounded">2</a>
                        <a href="#" class="rounded">3</a>
                        <a href="#" class="rounded">4</a>
                        <a href="#" class="rounded">5</a>
                        <a href="#" class="rounded">6</a>
                        <a href="#" class="rounded">&raquo;</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
