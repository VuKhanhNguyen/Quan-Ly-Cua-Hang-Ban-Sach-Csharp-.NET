
@{
    ViewBag.Title = "LienHe2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model QuanLyCuaHangBanSach.Models.EmailViewModel
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Liên hệ</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Trang</a></li>
        <li class="breadcrumb-item active text-white">Liên hệ</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Liên lạc</h1>
                        <p class="mb-4">Hiện tại chúng tôi có rất nhiều cơ sở ở Việt Nam, nhưng cơ sở lớn nhất đang ở Đà Nẵng. Nếu các bạn muốn trực tiếp mua hàng ở Book Shop thì hãy ấn nút bên dưới <a href="https://htmlcodex.com/contact-form">Tải về ngay</a>.</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3828.138327537837!2d108.2110593!3d16.0768772!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31421847f0d1243f%3A0xfe9e3527761db501!2s48%20Cao%20Th%E1%BA%AFng%2C%20Thanh%20B%C3%ACnh%2C%20H%E1%BA%A3i%20Ch%C3%A2u%2C%20%C4%90%C3%A0%20N%E1%BA%B5ng%20550000%2C%20Vi%E1%BB%87t%20Nam!5e0!3m2!1svi!2s!4v1694274415868!5m2!1svi!2s"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }
                <div class="col-lg-7">
                    @using (Html.BeginForm("LienHe", "LienHe", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, "Your Name", htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "w-100 form-control border-0 py-3 mb-4", placeholder = "Your Name" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, "Your Email", htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "w-100 form-control border-0 py-3 mb-4", placeholder = "Enter Your Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Message, "Your Message", htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(m => m.Message, new { @class = "w-100 form-control border-0 mb-4", rows = "5", cols = "10", placeholder = "Your Message" })
                            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                        </div>

                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary" type="submit">Gửi</button>
                    }

                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">48 Cao Thắng, Hải Châu, Đà Nẵng</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Email</h4>
                            <p class="mb-2">nguyenvukhanh392@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Điện thoại</h4>
                            <p class="mb-2">0795605214</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->